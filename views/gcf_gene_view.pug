extends layout

block content
  div.row.flex-fill.d-flex.justify-content-start(style=height="inherit;")
    div.col-md-12.text-center.bg-white.text-dark.top-level
      .row.top-level
        .col-md-12
          h1#gcf-title GCF

      .row.top-level
        .col-md-12
          #loading-indicator.text-center.d-none
            .spinner-border.text-primary(role="status")
            span.ml-2 Loading...

          #error-message.alert.alert-danger.d-none

          #gcf-info.d-none
            p#gcf-summary

          #bgc-container
            // BGCs will be rendered here

block append head
  style.
    .top-level {
      padding: 20px;
    }

    .bgc-row {
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 10px;
      background-color: #f9f9f9;
    }

    .bgc-content {
      display: flex;
      align-items: center;
    }

    .bgc-id {
      width: 120px;
      margin-right: 15px;
      text-align: right;
      font-weight: bold;
    }

    .bgc-link {
      color: #0066cc;
      text-decoration: none;
    }

    .bgc-link:hover {
      text-decoration: underline;
    }

    .gene-container {
      position: relative;
      height: 50px;
      flex-grow: 1;
      background-color: #f0f0f0;
      border-radius: 3px;
    }

    .gene {
      position: absolute;
      height: 30px;
      top: 10px;
      border-radius: 3px;
      cursor: pointer;
    }

    .gene-forward {
      clip-path: polygon(0% 0%, 85% 0%, 100% 50%, 85% 100%, 0% 100%);
    }

    .gene-reverse {
      clip-path: polygon(100% 0%, 15% 0%, 0% 50%, 15% 100%, 100% 100%);
    }

    .gene-tooltip {
      position: absolute;
      background-color: rgba(0, 0, 0, 0.8);
      color: white;
      padding: 5px 10px;
      border-radius: 3px;
      font-size: 12px;
      z-index: 1000;
      pointer-events: none;
      display: none;
    }

    .scale-bar {
      height: 15px;
      position: relative;
      margin-bottom: 5px;
      border-bottom: 1px solid #999;
    }

    .scale-marker {
      position: absolute;
      bottom: 0;
      height: 5px;
      border-left: 1px solid #999;
      font-size: 10px;
    }

    .scale-label {
      position: absolute;
      bottom: 5px;
      transform: translateX(-50%);
      font-size: 10px;
    }

block scripts
  script(src="/javascripts/gcf_gene_view.js")
