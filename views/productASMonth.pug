extends layout

block content
  #content-wrapper
    .container
      a.back-link(href="/monthly-soil/") ‚Üê Back to Monthly Soil Index
      h1 #{month.toUpperCase()} - Product-Specific Results

      each productTypeData in productTypesWithDatasets
        h2.mt-4= productTypeData.name
        p Total datasets: #{productTypeData.datasets.length}

        table.table.table-striped.table-hover
          thead
            tr
              th Dataset
              th BGC Count
              th Actions
          tbody
            each dataset in productTypeData.datasets
              tr
                td= dataset.name
                td= dataset.bgcCount
                td
                  a.btn.btn-primary.btn-sm(href=dataset.path) View Results

block styles
  link(rel="stylesheet", href="/stylesheets/style.css")
  style.
    .back-link { 
      margin-bottom: 1rem; 
      display: block; 
    }

    /* Make the page occupy 100% height */
    .container {
      min-height: calc(100vh - 120px); /* Subtract header and footer height */
      padding-bottom: 2rem;
      margin-bottom: auto;
    }

    /* Ensure content block takes up available space */
    #content-wrapper {
      flex: 1 0 auto;
      display: flex;
      flex-direction: column;
    }

    /* Table styling */
    .table {
      margin-top: 1.5rem;
    }
