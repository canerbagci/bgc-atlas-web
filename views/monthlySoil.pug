extends layout

block content
  #content-wrapper
    .container
      h1 Monthly Soil BGC Catalogue

      .description
        p Sch√∂nbuch monthly soil sampling data

      h2 Complete antiSMASH Results
      p Full antiSMASH results for each dataset by month:
      ul
        each month in fullMonths
          li
            a(href=`/monthly-soil/full-AS/${month}/`)= month.toUpperCase()

      h2 Product-Specific Results
      p Results filtered by specific BGC product types:
      ul
        each month in productMonths
          li
            a(href=`/monthly-soil/product-AS/${month}/`)= month.toUpperCase()

block styles
  link(rel="stylesheet", href="/stylesheets/style.css")
  style.
    .description { 
      padding: 1rem;
      border-radius: 5px; 
      margin-bottom: 1.5rem; 
    }

    /* Make the page occupy 100% height */
    .container {
      min-height: calc(100vh - 120px); /* Subtract header and footer height */
      padding-bottom: 2rem;
      margin-bottom: auto;
    }

    /* Ensure content block takes up available space */
    #content-wrapper {
      flex: 1 0 auto;
      display: flex;
      flex-direction: column;
    }

    /* Remove bullets from list elements */
    ul {
      list-style-type: none;
      padding-left: 0;
    }

    /* Add some spacing between list items for better readability */
    li {
      margin-bottom: 0.5rem;
    }
